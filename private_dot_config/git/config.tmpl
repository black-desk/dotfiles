[alias]
	sign = commit --amend --signoff --gpg-sign --no-edit
[core]
	quotePath = false
	commitGraph = true
	abbrev = 12

[credential]
	helper = store

[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/env gh auth git-credential

[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/env gh auth git-credential

[extensions]
	worktreeConfig = true

[fetch]
	writeCommitGraph = true

[gc]
	writeCommitGraph = true

[pretty]
	fixes = "Fixes: %h (\"%s\")"
	ref = "commit %h (\"%s\")"

[pull]
	rebase = true

[receive]
	advertisePushOptions = true
	procReceiveRefs = refs/for

[sendemail]
	smtpServer = smtp.gmail.com
	smtpServerPort = 465
	smtpEncryption = ssl
	smtpUser = {{ .gmail }}
	tocmd = [ -x `pwd`/scripts/get_maintainer.pl ] && `pwd`/scripts/get_maintainer.pl --norolestats --nol
	cccmd = [ -x `pwd`/scripts/get_maintainer.pl ] && `pwd`/scripts/get_maintainer.pl --norolestats --nom

