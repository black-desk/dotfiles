# vim:set ft=muttrc:

bind generic,pager j next-line
bind generic,pager k previous-line

bind pager l next-undeleted
bind pager h previous-undeleted

bind pager i noop
bind pager x noop
bind pager q exit

bind pager - noop
bind pager <PageUp> noop
bind pager \Cb previous-page

bind pager <Space> noop
bind pager <PageDown> noop
bind pager \Cf next-page

bind pager g noop
bind pager gg top
bind pager G bottom

bind pager R group-reply

bind index R group-reply
